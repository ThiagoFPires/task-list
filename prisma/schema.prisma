generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  senha   String
  tarefas Tarefa[]
}

model Tarefa {
  id           Int         @id @default(autoincrement())
  titulo       String
  descricao    String
  status       Status      @default(pendente) // Mudamos para o enum Status
  prioridade   Prioridade  @default(baixa)
  criadoEm     DateTime    @default(now())
  atualizadoEm DateTime    @updatedAt
  usuarioId    Int
  usuario      Usuario     @relation(fields: [usuarioId], references: [id])
  historicos   Historico[]
}

model Historico {
  id           Int      @id @default(autoincrement())
  status       String
  atualizadoEm DateTime @default(now())
  tarefaId     Int
  tarefa       Tarefa   @relation(fields: [tarefaId], references: [id])
}

// Enum para os status das tarefas
enum Status {
  pendente
  em_progresso
  concluida
}

enum Prioridade {
  baixa
  media
  alta
}
